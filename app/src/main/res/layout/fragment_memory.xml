<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_memory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Roomie"
    tools:context=".fragment.MemoryFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="320dp"
        android:layout_height="600dp"
        android:id="@+id/actionRegister"
        style="@style/ElevatedCard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="100dp">

        <!-- elementi in single_action -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/memoriesContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:nestedScrollingEnabled="false"
            android:scrollbars="none"
            android:overScrollMode="never"/>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>