<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group_section"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Roomie">


    <!-- menu in alto -->
    <include
        layout="@layout/top_bar"
        android:id="@+id/top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <ScrollView
        android:layout_width="330dp"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/menuDropdownLayout"
            android:layout_width="330dp"
            android:layout_height="60dp"
            app:endIconMode="dropdown_menu"
            app:boxBackgroundMode="outlined"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeColor="@color/text_grey"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Roomie.RoundedTextInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/menuDropdown"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/UserName"
                android:inputType="none"
                android:textSize="20sp"/>
        </com.google.android.material.textfield.TextInputLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>